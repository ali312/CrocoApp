<div class="center hero-unit">
<p id="notice"><%= notice %></p>
<h1>Категория:<%= @category.name %></h1>

<h4>Слова в категории</h4>
<% @category.words.each do |word| %> 
  <p>
    <strong>Слово:</strong>
    <%= word.word %>
  </p>
<% end %>
 
<h4>Добавить слово:</h4>
<%= form_for([@category, @category.words.build]) do |f| %>
  <p>
    <%= f.label :word %><br />
    <%= f.text_area :word %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Назад', categories_path %>
</div>